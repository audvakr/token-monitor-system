# ==============================================
# TOKEN MONITOR SYSTEM - ENVIRONMENT VARIABLES TEMPLATE
# ==============================================
# Copy this file to .env and fill in your actual values

# Application Configuration
NODE_ENV=development
PORT=3000
DEBUG=false

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# Get these from your Supabase dashboard → Settings → Database
DB_HOST=db.your-supabase-project-ref.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your-supabase-password-here
DB_SSL=true

# ==============================================
# API CONFIGURATION
# ==============================================
DEXSCREENER_API_URL=https://api.dexscreener.com
RUGCHECK_API_URL=https://api.rugcheck.xyz/v1

# Optional API Keys
DEXSCREENER_API_KEY=
RUGCHECK_API_KEY=

# ==============================================
# MONITORING CONFIGURATION
# ==============================================
SCAN_INTERVAL_MINUTES=5
MAX_TOKENS_PER_SCAN=100
RATE_LIMIT_DELAY_MS=200

# ==============================================
# FILTER CONFIGURATION
# ==============================================
MIN_HOLDERS=50
MAX_TOP_HOLDER_PERCENTAGE=50
MIN_VOLUME_24H=1000
MIN_NET_TRADERS=10
MIN_LIQUIDITY=5000
MAX_TOKEN_AGE_HOURS=24

# ==============================================
# SUPPORTED BLOCKCHAINS
# ==============================================
SUPPORTED_CHAINS=ethereum,bsc,polygon,arbitrum

# ==============================================
# LOGGING & SECURITY
# ==============================================
LOG_LEVEL=info
LOG_FILE=logs/token-monitor.log
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=true
API_RATE_LIMIT_REQUESTS_PER_MINUTE=60
CORS_ORIGIN=http://localhost:3000

# ==============================================
# OPTIONAL: NOTIFICATIONS
# ==============================================
WEBHOOK_URL=
WEBHOOK_SECRET=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=
EMAIL_TO=