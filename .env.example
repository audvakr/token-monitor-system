# .env.example - Environment Variables for Token Monitor System

# --- Application Configuration ---
NODE_ENV=development
PORT=3000
DEBUG=true # Set to 'true' for detailed logging

# --- Database Configuration (Supabase/PostgreSQL) ---
# IMPORTANT: Replace with your actual Supabase credentials
DB_HOST=YOUR_SUPABASE_DB_HOST.supabase.co
DB_PORT=5432
DB_NAME=YOUR_SUPABASE_DB_NAME
DB_USER=YOUR_SUPABASE_DB_USER
DB_PASSWORD=YOUR_SUPABASE_DB_PASSWORD
DB_SSL=true # Set to 'true' for Supabase (requires { rejectUnauthorized: false } if self-signed)

# Local Database Bootstrap (for initial local setup, set DB_BOOTSTRAP_LOCAL=true)
# If using Supabase, set to 'false'.
DB_BOOTSTRAP_LOCAL=false
DB_ADMIN_USER=postgres
DB_ADMIN_HOST=localhost
DB_ADMIN_DB=postgres
DB_ADMIN_PASSWORD=
DB_ADMIN_PORT=5432

# --- API Configuration ---
# DexScreener API Key (if required, otherwise leave blank or remove)
# DEXSCREENER_API_KEY=your_dexscreener_api_key

# RugCheck API Key (if required, otherwise leave blank or remove)
# RUGCHECK_API_KEY=your_rugcheck_api_key

API_RATE_LIMIT_REQUESTS_PER_MINUTE=100

# --- Solana-Specific Configuration ---
SOLANA_CLUSTER=mainnet-beta # e.g., mainnet-beta, testnet, devnet
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com # Your Solana RPC endpoint

# --- Monitoring & Scanning Configuration ---
SCAN_INTERVAL_MINUTES=3
MAX_TOKENS_PER_SCAN=150

# --- Notification Settings ---
# Webhook for general alerts
WEBHOOK_URL=null
WEBHOOK_SECRET=null

# Discord Webhook for alerts
DISCORD_WEBHOOK_URL=null

# Telegram for alerts
TELEGRAM_BOT_TOKEN=null
TELEGRAM_CHAT_ID=null

# Email for alerts (SMTP settings)
SMTP_HOST=null
SMTP_PORT=587
SMTP_USER=null
SMTP_PASS=null
EMAIL_FROM=null
EMAIL_TO=null

# --- Monitoring Preferences (Boolean flags) ---
MONITOR_MEMECOINS=true
MONITOR_NEW_LISTINGS=true

# --- CORS Settings ---
CORS_ORIGIN=http://localhost:3000